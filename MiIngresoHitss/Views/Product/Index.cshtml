@model IEnumerable<MiIngresoHitss.Models.Product>

@{
    ViewData["Title"] = "Productos";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Registrar nuevo Producto</a>
</p>
<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
               ($)@Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
               Opciones
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-outline-secondary">Editar</a> 
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-outline-info">Detalles</a> 
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Borrar</a>  
            </td>
        </tr>
}
    </tbody>
</table>
